<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="5dp">
    <RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignStart="@+id/upload_item_image"
            android:layout_alignEnd="@+id/upload_item_image"
            android:layout_marginTop="10dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="75dp"
            android:id="@+id/upload_item_title"
            android:maxLines="1"
            android:ellipsize="end"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:id="@+id/upload_item_description"
            android:layout_below="@+id/upload_item_title"
            android:layout_alignParentStart="true"
            android:layout_marginTop="5dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="74dp"
            android:maxLines="1"
            android:ellipsize="end"
            android:layout_marginBottom="10dp"
            android:visibility="gone"
            />

        <ProgressBar
            style="?android:attr/progressBarStyleHorizontal"
            android:progress="25"
            android:max="100"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:indeterminate="false"
            android:id="@+id/upload_item_progress"
            android:layout_below="@+id/upload_item_title"
            android:layout_alignParentStart="true"
            android:layout_marginTop="5dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="75dp"
            android:layout_marginBottom="10dp"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/upload_item_image"
            android:layout_alignTop="@+id/upload_item_progress"
            android:layout_marginTop="15dp"
            android:layout_marginEnd="74dp"
            android:id="@+id/upload_item_progress_text"
            android:textSize="5pt"
            android:maxLines="1"
            android:ellipsize="end"
            />

        <ImageView
            android:id="@+id/upload_item_image"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="5dp"
            android:layout_centerVertical="true"
            android:src="@drawable/ic_clear_black_24dp"
            android:tint="#f3f3f3"
            android:contentDescription="close button"/>
    </RelativeLayout>
</android.support.v7.widget.CardView>