<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="me.bramhaag.owouploader">

    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>

    <application
        android:name="me.bramhaag.owoandroid.OwOApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/DayNightFade">
        <activity android:name="me.bramhaag.owoandroid.activities.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity
            android:name="me.bramhaag.owoandroid.activities.SettingsActivity"
            android:label="@string/title_activity_settings"
            android:parentActivityName="me.bramhaag.owoandroid.activities.MainActivity"
            android:theme="@style/Theme.AppCompat.DayNight">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="me.bramhaag.owoandroid.activities.MainActivity"/>
        </activity>
    </application>

</manifest>